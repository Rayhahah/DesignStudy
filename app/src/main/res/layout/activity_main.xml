<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rayhahah.designstudy.MainActivity">


    <Button
        android:id="@+id/btn_toolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="toToolbar"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_appbar"
        app:layout_constraintWidth_percent="0.2"/>


    <Button
        android:id="@+id/btn_appbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="toAppBar"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@id/btn_toolbar"
        app:layout_constraintRight_toLeftOf="@id/btn_draw"
        app:layout_constraintWidth_percent="0.2"/>

    <Button
        android:id="@+id/btn_draw"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="toDraw"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@id/btn_appbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.2"/>


</android.support.constraint.ConstraintLayout>
